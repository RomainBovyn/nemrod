<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="ral.serialization_visitor.class">Conjecto\RAL\Serializer\RdfSerializationVisitor</parameter>
        <parameter key="ral.deserialization_visitor.class">Conjecto\RAL\Serializer\RdfDeserializationVisitor</parameter>
        <parameter key="ral.serialization_visitor.jsonld.class">Conjecto\RAL\Framing\Serializer\JsonLdSerializationVisitor</parameter>
    </parameters>

    <services>
        <!-- JsonLD -->
        <service id="ral.serialization_visitor.jsonld" class="%ral.serialization_visitor.jsonld.class%">
            <argument type="service" id="ral.jsonld.serializer" />
            <tag name="jms_serializer.serialization_visitor" format="jsonld" />
        </service>

        <!-- Ntriples -->
        <service id="ral.serialization_visitor.n3" class="%ral.serialization_visitor.class%">
            <argument type="string">ntriples</argument>
            <tag name="jms_serializer.serialization_visitor" format="n3" />
        </service>

        <!-- Turtle -->
        <service id="ral.serialization_visitor.ttl" class="%ral.serialization_visitor.class%">
            <argument type="string">turtle</argument>
            <tag name="jms_serializer.serialization_visitor" format="ttl" />
        </service>
    </services>
</container>
