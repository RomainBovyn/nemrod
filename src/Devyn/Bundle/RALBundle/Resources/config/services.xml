<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="ral.namespace_registry.class">Devyn\Component\RAL\Registry\RdfNamespaceRegistry</parameter>
        <parameter key="ral.sparql.connection.class">EasyRdf\Sparql\Client</parameter>
        <parameter key="ral.resource_manager.class">Devyn\Component\RAL\Manager\ResourceManager</parameter>
        <parameter key="ral.repository_factory.class">Devyn\Component\RAL\Manager\RepositoryFactory</parameter>
    </parameters>

    <services>
        <!-- namespace -->
        <service id="ral.namespace_registry" class="%ral.namespace_registry.class%" />
        <!-- namespace  -->
        <service id="ral.namespace_registry" class="%ral.namespace_registry.class%">
            <tag name="kernel.event_listener" event="kernel.request" />
        </service>
        <service id="namespace_registry" alias="ral.namespace_registry" />

        <!-- resource manager -->
        <service id="ral.resource_manager" class="%ral.resource_manager.class%" abstract="true"/>
        <service id="ral.repository_factory" class="%ral.repository_factory.class%" abstract="true"/>
        <!-- type mapper  -->
        <service id="ral.type_mapper" class="%ral.type_mapper.class%">
            <tag name="kernel.event_listener" event="kernel.request" />
        </service>

        <!-- resource mapping-->
        <service id="ral.resource_manager" class="%resource_manager.class%">
            <call method="setRepositoryFactory">
                <argument type="service" id="ral.repository_factory" />
            </call>
            <call method="setSparqlClient">
                <argument type="service" id="sparql" />
            </call>
        </service>
        <service id="rm" alias="ral.resource_manager">
        </service>
        <service id="ral.repository_factory" class="%repository_factory.class%" public="false">
        </service>
        
        <!-- resource mapping-->
        <service id="ral.resource_manager" class="%resource_manager.class%" />

        <!-- sparql endpoints -->
        <service id="ral.sparql.connection" class="%ral.sparql.connection.class%" abstract="true"/>
    </services>

</container>
