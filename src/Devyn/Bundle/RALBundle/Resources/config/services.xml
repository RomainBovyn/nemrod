<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="ral.namespace_registry.class">Devyn\Component\RAL\Registry\RdfNamespaceRegistry</parameter>
        <parameter key="ral.sparql.connection.class">EasyRdf\Sparql\Client</parameter>
        <parameter key="ral.type_mapper.class">Devyn\Component\RAL\Registry\TypeMapperRegistry</parameter>
        <parameter key="ral.resource_manager.class">Devyn\Component\RAL\Manager\Manager</parameter>
        <parameter key="ral.repository_factory.class">Devyn\Component\RAL\Manager\RepositoryFactory</parameter>
        <parameter key="ral.persister.class">Devyn\Component\RAL\Manager\SimplePersister</parameter>
        <parameter key="ral.resource_lifecycle_event_dispatcher.class">Symfony\Component\EventDispatcher\EventDispatcher</parameter>
        <parameter key="query_manager.class">Devyn\Component\QueryBuilder\QueryBuilder</parameter>

        <!-- MetadataFactory -->
        <parameter key="ral.metadata_factory.class">Metadata\MetadataFactory</parameter>
        <parameter key="ral.metadata_annotation_driver.class">Devyn\Component\RAL\Mapping\Driver\AnnotationDriver</parameter>

        <!-- Elastica -->
        <parameter key="ral.elastica_client.class">Elastica\Client</parameter>
        <parameter key="ral.elastica_index.class">Elastica\Index</parameter>
        <parameter key="ral.elastica_type.class">Elastica\Type</parameter>
        <parameter key="ral.elastica_search.class">Devyn\Bridge\Elastica\Search</parameter>
        <parameter key="ral.elastica_config_manager.class">Elastica\ConfigManager</parameter>
        <parameter key="ral.elastica_mapping_builder.class">Devyn\Bridge\Elastica\MappingBuilder</parameter>
        <parameter key="ral.elastica_resetter.class">Devyn\Bridge\Elastica\Resetter</parameter>
    </parameters>

    <services>

        <!-- namespace  -->
        <service id="ral.namespace_registry" class="%ral.namespace_registry.class%">
            <tag name="kernel.event_listener" event="kernel.request" />
        </service>
        <service id="namespace_registry" alias="ral.namespace_registry" />

        <!-- event dispatcher -->
        <service id="ral.resource_lifecycle_event_dispatcher" class="%ral.resource_lifecycle_event_dispatcher.class%" abstract="true"/>

        <!-- query builder -->
        <service id="ral.query_builder" class="%query_manager.class%" abstract="true"/>

        <!-- resource manager -->
        <service id="ral.resource_manager" class="%ral.resource_manager.class%" abstract="true"/>
        <service id="ral.repository_factory" class="%ral.repository_factory.class%" abstract="true"/>
        <service id="ral.persister" class="%ral.persister.class%" abstract="true"/>

        <!-- type mapper  -->
        <service id="ral.type_mapper" class="%ral.type_mapper.class%">
            <tag name="kernel.event_listener" event="kernel.request" />
        </service>

        <!-- metadatafactory -->
        <service id="ral.metadata_annotation_driver" class="%ral.metadata_annotation_driver.class%" public="false">
            <argument type="service" id="annotation_reader" />
            <argument />
        </service>
        <service id="ral.metadata_factory" class="%ral.metadata_factory.class%" public="false">
            <argument type="service" id="ral.metadata_annotation_driver" />
        </service>

        <!-- sparql endpoints -->
        <service id="ral.sparql.connection" class="%ral.sparql.connection.class%" abstract="true"/>

        <!-- elastica indexes, persisters, transformers... -->
        <service id="ral.elasticsearch_client" class="%ral.elastica_client.class%" abstract="true" />
        <service id="ral.elasticsearch_index" class="%ral.elastica_index.class%" abstract="true" />
        <service id="ral.elasticsearch_type" class="%ral.elastica_type.class%" abstract="true" />
        <service id="ral.elasticsearch_search" class="%ral.elastica_search.class%" abstract="true" />
        <service id="ral.elasticsearch_config_manager" class="%ral.elastica_config_manager.class%" />
        <service id="ral.elasticsearch_mapping_builder" class="%ral.elastica_mapping_builder.class%" >
            <argument type="service" id="ral.elasticsearch_config_manager"/>
        </service>
        <service id="ral.elasticsearch_resetter" class="%ral.elastica_resetter.class%" >
            <argument type="service" id="ral.elasticsearch_config_manager"/>
            <argument type="service" id="ral.elasticsearch_mapping_builder"/>
        </service>

    </services>

</container>
