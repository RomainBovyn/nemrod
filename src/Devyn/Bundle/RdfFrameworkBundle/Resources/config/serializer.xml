<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="rdf.serialization_visitor.class">Devyn\Bridge\EasyRdf\Serializer\RdfSerializationVisitor</parameter>
        <parameter key="rdf.deserialization_visitor.class">Devyn\Bridge\EasyRdf\Serializer\RdfDeserializationVisitor</parameter>
    </parameters>

    <services>
        <!-- JsonLD -->
        <service id="rdf.serialization_visitor.jsonld" class="%rdf.serialization_visitor.class%">
            <argument type="string">jsonld</argument>
            <!--argument type="collection">
                <argument key="compact">0</argument>
            </argument-->
            <tag name="jms_serializer.serialization_visitor" format="jsonld" />
        </service>

        <!--service id="rdf.deserialization_visitor.jsonld" class="%rdf.deserialization_visitor.class%">
            <argument type="service" id="jms_serializer.naming_strategy" />
            <argument type="service" id="jms_serializer.object_constructor" />
            <tag name="jms_serializer.deserialization_visitor" format="jsonld" />
        </service-->

        <!-- Ntriples -->
        <service id="rdf.serialization_visitor.n3" class="%rdf.serialization_visitor.class%">
            <argument type="string">ntriples</argument>
            <tag name="jms_serializer.serialization_visitor" format="n3" />
        </service>
    </services>
</container>



