<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="rdf.serialization_visitor.class">Devyn\Bridge\EasyRdf\Serializer\ResourceSerializationVisitor</parameter>
        <parameter key="rdf.deserialization_visitor.class">Devyn\Bridge\EasyRdf\Serializer\ResourceDeserializationVisitor</parameter>
    </parameters>

    <services>
        <!-- JsonLD -->
        <service id="rdf.jsonld_serialization_visitor" class="%rdf.serialization_visitor.class%">
            <argument type="string">jsonld</argument>
            <tag name="jms_serializer.serialization_visitor" format="jsonld" />
        </service>
        <service id="rdf.jsonld_deserialization_visitor" class="%rdf.deserialization_visitor.class%">
            <argument type="service" id="jms_serializer.naming_strategy" />
            <argument type="service" id="jms_serializer.object_constructor" />
            <tag name="jms_serializer.deserialization_visitor" format="jsonld" />
        </service>
    </services>
</container>



