<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>    
        <parameter key="rdf.serialization_visitor.class">Devyn\Bridge\EasyRdf\Serializer\RdfSerializationVisitor</parameter>
        <parameter key="rdf.jsonld.frame.loader.filesystem.class">Devyn\Bundle\RdfFrameworkBundle\Loader\JsonLdFrameLoader</parameter>
        <parameter key="rdf_repository.class">Devyn\Component\ResourceRepository\Repository</parameter>
    </parameters>

    <services>

        <service id="rdf.jsonld.frame.loader.filesystem" class="%rdf.jsonld.frame.loader.filesystem.class%" public="false">
            <argument type="service" id="templating.locator" />
            <argument type="service" id="templating.name_parser" />
        </service>
        <service id="jsonld.frame.loader" alias="rdf.jsonld.frame.loader.filesystem" />

        <service id="rdf_repository" class="%rdf_repository.class%">
        </service>

    </services>
</container>
