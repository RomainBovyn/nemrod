<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>    
        <parameter key="rdf.serialization_visitor.class">Conjecto\RAL\Serializer\RdfSerializationVisitor</parameter>
        <parameter key="rdf.jsonld.frame.loader.filesystem.class">Devyn\Bundle\RdfFrameworkBundle\Loader\JsonLdFrameLoader</parameter>
        <parameter key="rdf.resource.param_convecter.class">Devyn\Component\ParamConverter\ResourceParamConverter</parameter>
    </parameters>

    <services>
        <service id="rdf.jsonld.frame.loader.filesystem" class="%rdf.jsonld.frame.loader.filesystem.class%" public="false">
            <argument type="service" id="templating.locator" />
            <argument type="service" id="templating.name_parser" />
        </service>
        <service id="jsonld.frame.loader" alias="rdf.jsonld.frame.loader.filesystem" />
        <service id="resource.param_converter" class="%rdf.resource.param_convecter.class%">
            <tag name="request.param_converter" priority="1" converter="resource" />
            <argument type="service" id="service_container" />
        </service>
    </services>
</container>
